    function limit()
    {
        var count = 1;
        setInterval(function ()
        {
            if (count % 200 == 0)
            {
                window.location.href='/';
            }
            count++;

        }, 1000);
    }
    function over(classname)
    {
        $(classname).html('停止开奖');
    }
    function pause(classname)
    {
        $(classname).html('已封盘');
    }
    leadingZeros = function(num, length) {
        length = length || 2;
        num = String(num);
        if (num.length > length) {
            return num
        }
        return (Array(length + 1).join("0") + num).substr( - length)
    };
