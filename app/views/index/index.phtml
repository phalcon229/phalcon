    function getNext(betid)
    {
        api.get('/game/nextall', {betid:betid}, function(res) {
            if (res.code != 200) {
                getNext()
                return false;
            }
            var bet_id = new Array();
            var closetime = new Array();
            $.each(res.data.res, function(i, item){
                  bet_id.push(item.bet_id);
                  closetime.push(new Date(res.data.res[i].bres_open_time-res.data.interval)*1000);
            });
            $.each(bet_id, function(i, item){
                var countname = '.countdown'+item;

                if(closetime[i]<0)
                {
                    over(countname);
                }
                else
                {
                    var diff = (new Date()).getTime() - res.data.time*1000 ;
                    var starttime = new Date(closetime[i] + diff);
                    var id = '';
                    id = setInterval(function () {
                        var nowtime = new Date();
                        var time = starttime - nowtime;
                        var bet_Id = bet_id[i];
                        var day = parseInt(time / 1000 / 60 / 60 / 24);
                        var hour = parseInt(time / 1000 / 60 / 60 % 24);
                        var minute = parseInt(time / 1000 / 60 % 60);
                        var seconds = parseInt(time / 1000 % 60);
                        $(countname).html( leadingZeros(hour) + ":" + leadingZeros(minute) + ":" + leadingZeros(seconds) );
                        if(time<=0){
                            // if(log<=0)
                            // {
                                log=1;
                                pause(countname);
                                clearInterval(id);
                                setTimeout(getNext(bet_Id),3000);
